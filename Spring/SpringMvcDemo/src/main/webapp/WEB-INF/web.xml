<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>mvcfront</servlet-name>
  	<!-- whenever frontservlet is invoked 
  	pre-defined class called as DispatcherServlet
  	will be invoked -->
  	<servlet-class>
  		org.springframework.web.servlet.DispatcherServlet
  	</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>mvcfront</servlet-name>
  	
  	<!-- all the incoming requests after '/' would be received by
  	 frontservlet-->
  	<url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>
